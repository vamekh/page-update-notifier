{
  "manifest_version": 2,
  "name": "Page Update Notifier",
  "description": "შექმენით შაბლონები და გამოიწერეთ ახალი ინსტანსები",
  "version": "1.0",
  "author": "ვამეხ ბაშარული",
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Click to view new instances",
    "default_popup": "pop-up/pop-up.html"
  },
  "permissions": [
    "notifications",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "options/options.html",
  "background": {
    "persistent": false,
    "scripts": [
      "common/update-notifier.js",
      "background/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}