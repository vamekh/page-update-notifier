{
  "manifest_version": 2,
  "name": "Page Update Notifier",
  "description": "შექმენით შაბლონები და გამოიწერეთ ახალი ინსტანსები",
  "version": "1.0",
  "author": "ვამეხ ბაშარული",
  "icons": {
    "16": "icon128.png",
    "48": "icon128.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Click to view new instances",
    "popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": [
      "options.js",
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}