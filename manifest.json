{
  "manifest_version": 2,
  "name": "Page Update Notifier",
  "description": "შექმენით შაბლონები და გამოიწერეთ ახალი ინსტანსები",
  "version": "1.0",
  "author": "ვამეხ ბაშარული",
  "icons": {
    "16": "sms16.png",
    "48": "sms48.png",
    "128": "sms128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://www.myhome.ge/*",
    "https://www.mymarket.ge/*"
  ],
  "browser_action": {
    "default_icon": "sms48.png",
    "default_title": "Click to view new instances",
    "popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://sms.tsu.ge/sms/Students/Cxrilebi*"
      ],
      "js": [
        "jquery.js",
        "content.js"
      ],
      "css": [
        "new-schedule-style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'sha256-WOdSzz11/3cpqOdrm89LBL2UPwEU9EhbDtMy2OciEhs='",
}
